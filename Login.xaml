<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    
    xmlns:local="clr-namespace:BeatsAppClient"
    
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BeatsAppClient.Login">
    <StackLayout
        BackgroundColor="Blue">
        <VerticalStackLayout
            VerticalOptions="Center">
            <ImageButton
                x:Name="User_Image"
                IsVisible="True"
                BackgroundColor="Green"
                HorizontalOptions="Center"
                VerticalOptions="Start" />
            <Entry
                x:Name="Username"
                Placeholder="Username"
                PlaceholderColor="White"
                TextColor="White" />
            <Entry
                x:Name="Email"
                Placeholder="Email"
                PlaceholderColor="White"
                TextColor="White" />
            <Entry
                x:Name="Legal_Name"
                Placeholder="Legal Name (for Commercial Purpose)"
                PlaceholderColor="White"
                TextColor="White" />
            <Entry
                x:Name="Role"
                Placeholder="Role in Music"
                PlaceholderColor="White"
                TextColor="White" />
            <Entry
                x:Name="Password"
                Placeholder="Password"
                PlaceholderColor="White"
                TextColor="White" />
            <Button
                x:Name="LoginButton"
                Text="LOGIN"
                TextColor="White"
                BackgroundColor="Green"
                VerticalOptions="End" />
            <Button
                x:Name="SigninButton"
                Text="SIGNIN"
                TextColor="White"
                BackgroundColor="Green"
                VerticalOptions="End" />
        </VerticalStackLayout>
    </StackLayout>
</ContentPage>